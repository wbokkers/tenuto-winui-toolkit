<Window
    x:Class="Tenuto.WinUI.ToolkitApp.MainWindow" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:local="using:Tenuto.WinUI.ToolkitApp" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="LayoutRoot">
        <StackPanel
            HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="12">
            <Button HorizontalAlignment="Center" Click="OpenContentDialogClick">Open Content Dialog</Button>

            <Button HorizontalAlignment="Center" Click="OpenWindowWithIconClick">Open Window With Icon</Button>
            <Button HorizontalAlignment="Center" Click="OpenModalDialogClick">Open Modal Dialog Window</Button>
            <Button HorizontalAlignment="Center" Click="OpenCompactWindowClick">Open Compact Window</Button>
        </StackPanel>
    </Grid>
</Window>
